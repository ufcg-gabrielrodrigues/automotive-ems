component on_off_controller
    % On-Off Controller
    % Description.
    
    inputs
        setpoint = 0;   % Setpoint:left
        reading = 0;    % Reading:left
    end
    outputs
        u = 0;          % Output:right
    end
    variables
        error = 0;      % 
    end
    equations
        error == setpoint - reading;
        
        if (error > 0)
            u == 1;
        else
            u == 0;
        end
    end
end